@model IEnumerable<Books.Data.Book>;

@{
    ViewData["Title"] = "Home Page";
}

<h1>Products - Single Container</h1>
<div class="card shadow mt-2 mb-2">
    <div class="card-header">
        <h1 class="PageTitle">Book List</h1>
    </div>
    <div class="card-body">
        <div>
            <a href="/addbook" class="float">
                <span class="oi oi-plus float-margintop" aria-hidden="true"></span>
            </a>
        </div>
        <table class="table table-striped table-bordered table-hover shadow" aria-labelledby="tableLabel">
            <thead class="table-header-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Author)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                    <th>@Html.DisplayNameFor(model => model.Pages)</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>
                            <img class="rounded-circle image-styles" src="@book.PictureUrl" title="book.title" width="50px" height="50px" />
                        </td>
                        <td>
                            @book.Title
                        </td>
                        <td>
                            @book.Author
                        </td>
                        <td>
                            @if (@book.IsActive)
                            {
                                <span class="oi oi-thumb-up span-styles"></span>
                            }
                            else
                            {
                                <span class="oi oi-thumb-down span-styles"></span>
                            }

                        </td>
                        <td>@book.ISBN</td>
                        <td>@book.Pages</td>
                        <td>
                            <a href="editbook/@book.Id" class="td-a-edit">
                                Edit
                            </a>
                        </td>
                        <td>
                            <a href="deletebook/@book.Id" class="td-a-delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>